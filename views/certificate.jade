doctype html
html
  head
    title= title
    style.
        body {
          width: 100%;
          height: 157mm;
          margin: 0;
          background: url(http://i.imgur.com/cZJiAKV.png);
          background-repeat: no-repeat;
          background-position: cover;
          background-size: 100% auto;
        }
        .certificate {
          position: absolute;
          padding: 0;
          left: 0px;
          top: 0px;
          width: 100%;
          min-height: 100%;
          margin: 0;
        }

        .certificate-name,
        .certificate-text,
        .certificate-date {
            color: #5a5a59;
            text-align: center;
            position: absolute;
            left: 20%;
            transform: translateX(-50%);
            width: 60%;
        }

        .certificate-name {
            font-size: 20px;
            top: 40%;
            float: left;
        }

        .certificate-date {
            font-size: 18px;
            bottom: 22%;
        }

        .certificate-text {
            font-size: 16px;
            top: 50%;
        }

  body
    div.certificate
      h1.certificate-name #{name}

      p.certificate-text #{description}

      h3.certificate-date #{date}
